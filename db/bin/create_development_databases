#!/bin/bash
set -e

dropdb --if-exists dawnpatrol_development
dropdb --if-exists dawnpatrol_test

dropuser --if-exists dawnpatrol
createuser dawnpatrol

createdb dawnpatrol_development -O dawnpatrol
psql -v ON_ERROR_STOP=1 dawnpatrol_development -c 'drop extension if exists plpgsql'
psql -v ON_ERROR_STOP=1 dawnpatrol_development dawnpatrol < schema.sql

createdb dawnpatrol_test -O dawnpatrol
psql -v ON_ERROR_STOP=1 dawnpatrol_test -c 'drop extension if exists plpgsql'
psql -v ON_ERROR_STOP=1 dawnpatrol_test dawnpatrol < schema.sql

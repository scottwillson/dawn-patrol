FROM golang:1.8 as builder

WORKDIR /go/src/rocketsurgeryllc.com/dawnpatrol/api
COPY . .

RUN go get ./...

# RUN go build main/api.go
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o main/api.go .

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/
COPY --from=builder /go/src/rocketsurgeryllc.com/dawnpatrol/api .

RUN pwd
RUN ls -la

CMD ["./api"]

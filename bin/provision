#!/bin/bash

case $1 in
staging)
  ansible-playbook \
    -i ansible/staging \
    ansible/provision.yml
  ;;
  production)
  ansible-playbook \
    -i ansible/production \
    ansible/provision.yml
  ;;
*)
  ansible-playbook \
    -i ansible/local \
    --private-key=.vagrant/machines/default/virtualbox/private_key \
    -u vagrant \
    ansible/provision.yml
  ;;
esac

#!/bin/bash

case $1 in
staging)
  ansible-playbook \
    -i ansible/staging \
    ansible/playbook.yml
  ;;
*)
  ansible-playbook \
    -i .vagrant/provisioners/ansible/inventory/vagrant_ansible_inventory \
    --private-key=.vagrant/machines/default/virtualbox/private_key \
    -u vagrant \
    ansible/playbook.yml
  ;;
esac

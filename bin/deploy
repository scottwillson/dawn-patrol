#!/bin/bash

case $1 in
staging)
  ansible-playbook \
    -i ansible/staging \
    ansible/deploy.yml
  ;;
production)
  ansible-playbook \
    -i ansible/production \
    --private-key=ansible/.ssh/id_rsa \
    ansible/deploy.yml
  ;;
*)
  ansible-playbook \
    -i ansible/local \
    --private-key=.vagrant/machines/default/virtualbox/private_key \
    -u vagrant \
    ansible/deploy.yml
  ;;
esac

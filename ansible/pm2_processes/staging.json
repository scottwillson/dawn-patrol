{
  "apps": [
    {
      "name"        : "app",
      "script"      : "dist/server.js",
      "cwd"         : "/var/www/dawn-patrol",
      "instances"   : 0,
      "exec_mode"   : "cluster_mode",
      "merge_logs"  : true
    },
    {
      "name"        : "echo_server",
      "script"      : "dist/echo_server.js",
      "cwd"         : "/var/www/dawn-patrol",
      "instances"   : 1,
      "exec_mode"   : "cluster_mode",
      "merge_logs"  : true,
      "env": {
        "NODE_CONFIG": "{ \"echoServer\": { \"webServerLogFilePath\": \"/var/log/nginx/obra.access.log\" } }"
      }
    }
  ]
}
